<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Title>AzureAI.Community.SK.Plugin.VisualizationPlugin</Title>
		<Authors>Azure.AI.Community - Vinoth Rajendran</Authors>
		<Description>AzureAI.Community.SK.Plugin.DiagramVisualizationPlugin</Description>
		<PackageProjectUrl>https://github.com/Azure-AI-Community</PackageProjectUrl>
		<PackageIcon>azureai.jpeg</PackageIcon>
		<RepositoryUrl>https://github.com/Azure-AI-Community</RepositoryUrl>
		<PackageReleaseNotes>https://github.com/Azure-AI-Community/Microsoft-Semantic-Kernel-Community-dotnet/blob/main/README.md</PackageReleaseNotes>
		<PackageId>AzureAI.Community.SK.Plugin.VisualizationPlugin</PackageId>
		<PackageLicenseUrl>https://github.com/Azure-AI-Community</PackageLicenseUrl>
		<RootNamespace>AzureAI.Community.SK.Plugin.VisualizationPlugin</RootNamespace>
		<Company>Azure.AI.Community</Company>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>Microsoft;Semantic:Kernel;AI;Azure;Text;Translate;Mermaid;diagram;image;Plugin;search</PackageTags>
		<PackAsTool>False</PackAsTool>
		<license>MIT</license>
		<Copyright>Azure.AI.Community</Copyright>
    <Version>1.0.1</Version>
    <PackageVersion>$(NugetVersion)</PackageVersion>
    <PackageOutputPath>..\nugetPackage</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SemanticKernel" Version="1.38.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AzureAI.Community.SK.Plugin.MermaidPlugin\AzureAI.Community.SK.Plugin.MermaidPlugin.csproj" />
      <None Update="azureai.jpeg">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	  <None Update="README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
  </ItemGroup>

</Project>
